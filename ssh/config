ServerAliveInterval 30

Host aurora
    # SSH Agent Forwarding
    RemoteForward /run/user/1000/gnupg/S.gpg-agent.ssh.remote /Users/drekar/.gnupg/S.gpg-agent.ssh

    # GPG Agent Forwarding
    RemoteForward /run/user/1000/gnupg/S.gpg-agent.remote /Users/drekar/.gnupg/S.gpg-agent

    # Cleanup
    StreamLocalBindUnlink yes

    # Override "hostbound"
    PubkeyAuthentication unbound

Host cumulus
  # Obtained with gpgconf --list-dirs agent-socket (remote)
  #           and gpgconf --list-dirs agent-extra-socket (local)
  RemoteForward /run/user/1001/gnupg/S.gpg-agent /run/user/1001/gnupg/S.gpg-agent.extra

  # IdentitiesOnly yes
  # IdentityFile ~/.ssh/id_ed25519_lkingland.pub

Host remarkable
  Hostname 192.168.34.35
  User root
  Port 22
  IdentityFile ~/.ssh/id_ed25519


